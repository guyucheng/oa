<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_single_user_chat_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:srcCompat="@mipmap/ic_chat_header_layer_round" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_single_user_chat_head"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/iv_single_user_chat_head"
        android:text="小明同学"
        android:textColor="@color/cardview_dark_background"
        android:textSize="25sp" />

    <TextView
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_single_user_chat_head"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/iv_single_user_chat_head"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="信息主题信息主题信息主题信息主题"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_single_user_chat_head"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="28dp"
        android:text="2019年12月21日"
        android:textSize="18sp" />

</RelativeLayout>