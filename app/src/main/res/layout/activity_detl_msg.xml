<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetlMsgActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMassage"
        app:titleTextColor="@color/colorWrite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_detl_go_back"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_action_arr_back" />

            <TextView
                android:id="@+id/tv_detl_from_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="Name"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>


    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_detl_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is title"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_detl_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2019-3-5   13:23"
                android:textSize="15sp" />

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/tv_detl_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\tThis is content!This is content!This is content!\n  This is content!This is content!"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>